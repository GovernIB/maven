<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>es.caib.digital.es_caib_digital</groupId>
  <artifactId>es_caib_digital</artifactId>
  <version>1.0</version>
  <packaging>pom</packaging>
  <name>es_caib_digital</name>
  <description>Modulo de copia autentica</description>

  <organization>
    <name>IECISA</name>
    <url>www.iecisa.com</url>
  </organization>

  <repositories>
    <repository>
      <id>central</id>
      <url>http://repo1.maven.org/maven2</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>itagelib-spring-maven-repos</id>
      <url>http://registre.sourceforge.net/maven/itaglib-spring</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <!-- Requerim GENAPP i PLUGINSIB -->
    <repository>
       <id>github-governib-maven-repos</id>
       <name>GitHub GovernIB Maven Repository</name>
       <url>http://GovernIB.github.io/maven/maven/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>maven-nuxeo</id>
      <url>https://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>JBoss repository</id>
      <url>http://repository.jboss.org/nexus/content/groups/public/</url>
    </repository>
    <repository>
      <name>Digital Local Repo</name>
      <id>es.caib.digital.localrepo</id>
      <url>file://${project.basedir}/local-repo</url>
    </repository>
